<logging>
    <filter enabled="true">
        <tag>file</tag>
        <type>file</type>
        <level>DEBUG</level>
        <property name="filename">log/larkapp.log</property>
        <property name="format">[%D %T] [%L] %M</property>
        <property name="rotate">true</property> <!-- true enables log rotation, otherwise append -->
        <property name="maxsize">100M</property> <!-- \d+[KMG]? Suffixes are in terms of 2**10 -->
        <property name="maxlines">100K</property> <!-- \d+[KMG]? Suffixes are in terms of thousands -->
        <property name="hourly">true</property> <!-- Automatically rotates when a log message is written after midnight -->
        <property name="saving_hours">24</property><!--- Saving log file hours.-->
    </filter>
</logging>

